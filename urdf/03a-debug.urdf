<?xml version="1.0"?>
<robot name="myrobot"
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find urdf_tutorial)/urdf/materials.urdf.xacro" />
    <link name="torso">
        <visual>
            <geometry>
                <box size="1 1 1" />
            </geometry>
            <material name="red"/>
        </visual>
    </link>

   <!-- if there is no transform, there is no tf being pubed -->
   <!-- TO MAKE TF pubed out, uncomment the following code -->
   <!-- axis will be the global frame, will be placed at (0,0,0) -->

    <link name="axis">
    </link>

    <joint name="leg1connect" type="fixed">
        <origin xyz="0 .30 0" />
        <parent link="axis"/>
        <child link="torso"/>
    </joint>
</robot>